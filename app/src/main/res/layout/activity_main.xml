<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Bağlantı Durumu -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bağlantı Durumu: Bağlı Değil"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#F44336"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pompa Kontrolleri Grup -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPumpControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvConnectionStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pompa Kontrolleri"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Pompa Hız Kontrolü -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pompa Hızı"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <SeekBar
                android:id="@+id/seekBarSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"/>

            <TextView
                android:id="@+id/tvSpeedValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hız: 50%"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Pompa Yön Kontrolü -->
            <RadioGroup
                android:id="@+id/radioGroupDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İleri"
                    android:checked="true"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radioBackward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geri"/>
            </RadioGroup>

            <!-- Başlat/Durdur Butonları -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BAŞLAT"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DURDUR"
                    android:backgroundTint="#F44336"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Sensor Verileri Tablosu -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/cardPumpControls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor Verileri (Voltaj Değerleri)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/tableSensorData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <!-- Tablo Başlığı -->
                        <TableRow
                            android:background="#EEEEEE">
                            <TextView
                                android:padding="8dp"
                                android:text="Zaman"
                                android:textStyle="bold"/>
                            <TextView
                                android:padding="8dp"
                                android:text="Voltaj (V)"
                                android:textStyle="bold"/>
                        </TableRow>

                        <!-- Tablo içeriği dinamik olarak doldurulacak -->
                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>